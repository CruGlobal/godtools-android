<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        style="@style/Layout.Padded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/fragment_language_settings_primary_header_textview"
            style="@style/Text.LanguageHeaders"
            android:text="Primary Language"/>

        <Button
            android:id="@+id/fragment_language_settings_primary_language_button"
            style="@style/Button.FullWidth"
            android:text="Czech"/>

        <TextView
            android:id="@+id/fragment_language_settings_parallel_header_textview"
            style="@style/Text.LanguageHeaders"
            android:text="Parallel Language"/>

        <Button
            android:id="@+id/fragment_language_settings_parallel_language_button"
            style="@style/Button.FullWidth"
            android:text="Select a Parallel Language"/>

        <Button
            android:id="@+id/fragment_language_settings_get_started_button"
            style="@style/Button.White"
            android:text="I'll do this later"/>


        <godtools.keynote.org.gttestui.appcompat.VectorTextView
            android:id="@+id/fragment_language_settings_instructions_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawablePadding="20dp"
            android:includeFontPadding="true"
            android:padding="20dp"
            android:text="Allows you to toggle between languages while sharing."
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:drawableTint="@color/ic_switch_blue"
            app:drawableTopCompat="@drawable/img_switch"/>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>