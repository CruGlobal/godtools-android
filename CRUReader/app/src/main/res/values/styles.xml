<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>


    </style>

    <!--<style name="ActivityTheme" parent="Theme.AppCompat.NoActionBar">-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
        <!--<item name="android:fitsSystemWindows">true</item>-->
        <!--<item name="android:windowNoTitle">true</item>-->
    <!--</style>-->



    <style name="PopupAnimation">

        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <style name="Popin" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>

    </style>

    <style name="Widget"></style>
    <style name="Widget.GodTools">
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="AutoScaleTextView" parent="Widget.GodTools">
        <item name="textSizeScalar">17</item> //Default Text Size Scalar
        <item name="android:visibility">gone</item>

    </style>

    <style name="AutoScaleTextView.HeaderNumberTextView">
        <item name="textSizeScalar">68</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">top|right</item>
    </style>

    <style name="AutoScaleTextView.HeaderHeaderTextView">
        <!-- Default Size -->
        <item name="textSizeScalar">17</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AutoScaleTextView.HeaderSubheadingTextView">
        <!-- Default Size -->
    </style>

    <style name="NormalButtonTextView" parent="AutoScaleTextView">
        <item name="textSizeScalar">20</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="Question" parent="AutoScaleTextView">
        <item name="android:gravity">top|right</item>



    </style>

    <style name="Question.QuestionStraightTextView">
        <item name="textSizeScalar">17</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal|top</item>

    </style>

    <style name="Question.QuestionDefaultTextView">
            <!-- Default Size -->
        <item name="textSizeScalar">20</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>



    <style name="Widget.GodTools.Button" parent="@style/Widget.AppCompat.Button.Borderless">

        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minHeight">1dp</item>
    </style>

    <style name="TextAppearance.GodTools.Button.Standard" parent="@style/TextAppearance.AppCompat.Widget.Button">
        <!--<item name="android:textSize">32dp</item>-->
        <!--<item name="android:textColor">@android:color/white</item>-->


        <item name="android:textColor">@android:color/white</item>
    </style>



    <style name="Widget.GodTools.Button.Standard">
        <item name="android:textAppearanceButton">@style/TextAppearance.GodTools.Button.Standard</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>




    <style name="Widget.GodTools.Button.ButtonPair">

    </style>


</resources>
