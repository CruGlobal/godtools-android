<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rmatt.crureader"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-sdk tools:overrideLibrary="me.grantland.widget" />

    <application android:name=".RenderApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"

        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"  android:theme="@style/AppTheme" android:screenOrientation="portrait" android:windowSoftInputMode="adjustPan">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>

        <activity android:name=".PopupDialogActivity" android:theme="@style/Popin" android:screenOrientation="portrait" android:windowSoftInputMode="adjustPan" />
        <!--<activity android:name=".FollowupDialogActivity" android:theme="@style/MyDialogActivity" android:screenOrientation="portrait"  />-->


        <activity android:name=".RenderSingleTestActivity" android:screenOrientation="portrait" android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>