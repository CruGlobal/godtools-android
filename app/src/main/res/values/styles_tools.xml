<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- region Download Progress -->
    <color name="tools_download_progress_bg">#7F000000</color>

    <style name="Widget.GodTools.Tools.Download.ProgressBar" parent="Widget.GodTools.ProgressBar">
        <item name="android:progressDrawable">@drawable/progress_download</item>
    </style>
    <!-- endregion Download Progress -->

    <!-- region Tool List Cards -->
    <dimen name="tools_card_corner_radius">6dp</dimen>
    <dimen name="tools_card_elevation">4dp</dimen>
    <dimen name="tools_card_border_width">2dp</dimen>
    <dimen name="tools_card_margin_horiz">16dp</dimen>
    <dimen name="tools_card_margin_vert">12dp</dimen>

    <style name="Widget.GodTools.Tools.Card" parent="Widget.GodTools.CardView">
        <item name="android:layout_marginLeft">@dimen/tools_card_margin_horiz</item>
        <item name="android:layout_marginRight">@dimen/tools_card_margin_horiz</item>
        <item name="android:layout_marginTop">@dimen/tools_card_margin_vert</item>
        <item name="cardElevation">@dimen/tools_card_elevation</item>
        <item name="cardMaxElevation">@dimen/tools_card_elevation</item>
        <item name="cardCornerRadius">@dimen/tools_card_corner_radius</item>
    </style>

    <style name="Widget.GodTools.Tools.Card.Banner" parent="Base">
        <item name="android:background">@color/gray_E6</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Widget.GodTools.Tools.Card.Title" parent="Base">
        <item name="android:textAppearance">@style/TextAppearance.GodTools.Tools.Card.Title</item>

        <!-- text output behavior -->
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.GodTools.Tools.Card.Subtitle" parent="Base">
        <item name="android:textAppearance">@style/TextAppearance.GodTools.Tools.Card.Tagline</item>

        <!-- text output behavior -->
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.GodTools.Tools.Card.Info" parent="Base">
        <item name="drawableTint">@color/gray_80</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textAppearance">@style/TextAppearance.GodTools.Tools.Card.Info</item>
    </style>

    <style name="Widget.GodTools.Tools.Card.ParallelLanguage" parent="Widget.GodTools.Tools.Card.Info">
        <!-- text output behavior -->
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>

        <!-- parallel language checkmark -->
        <item name="drawableEndCompat">@drawable/ic_language_available</item>
    </style>

    <style name="Widget.GodTools.Tools.Card.Action.Favorite" parent="Base">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:elevation">6dp</item>

        <item name="android:background">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.GodTools.Tools.Action.Favorite</item>

        <item name="android:src">@drawable/ic_favorite</item>
        <item name="android:tint">@color/gt_blue</item>
        <item name="contentPadding">5dp</item>
        <item name="contentPaddingTop">6dp</item>
        <item name="contentPaddingBottom">4dp</item>
    </style>

    <style name="ShapeAppearance.GodTools.Tools.Action.Favorite" parent="Base">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextAppearance.GodTools.Tools.Card.Title" parent="TextAppearance.GodTools">
        <item name="android:textColor">@color/gray_5A</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.GodTools.Tools.Card.Tagline" parent="TextAppearance.GodTools.Small">
        <item name="android:textColor">@color/gray_5A</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.GodTools.Tools.Card.Info" parent="TextAppearance.GodTools.Small">
        <item name="android:textColor">@color/gray_80</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- endregion Tool List Cards -->

    <!-- region Tool Details -->
    <dimen name="tool_details_margin_horizontal">32dp</dimen>
    <dimen name="tool_details_page_padding_vertical">32dp</dimen>

    <style name="Widget.GodTools.Tools.Details.Title" parent="Base">
        <item name="android:textAppearance">@style/TextAppearance.GodTools.Tools.Details.Title</item>
    </style>

    <style name="Widget.GodTools.Tools.Details.Shares" parent="Base">
        <item name="android:textAppearance">@style/TextAppearance.GodTools.Tools.Details.Shares</item>
    </style>

    <style name="Widget.GodTools.Tools.Details.Page.Content" parent="Base">
        <item name="android:textAppearance">@style/TextAppearance.GodTools.Tools.Details.Page.Content</item>
    </style>

    <style name="TextAppearance.GodTools.Tools.Details.Title" parent="TextAppearance.GodTools.Headline">
        <item name="android:textColor">@color/gray_5A</item>
    </style>

    <style name="TextAppearance.GodTools.Tools.Details.Shares" parent="TextAppearance.GodTools">
        <item name="android:textColor">@color/gray_5A</item>
    </style>

    <style name="TextAppearance.GodTools.Tools.Details.Page.Content" parent="TextAppearance.GodTools" />
    <!-- endregion Tool Details -->
</resources>
