<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="androidx.databinding.ObservableField" />
        <import type="org.cru.godtools.adapter.BannerCallbacks" />

        <variable name="callbacks" type="ObservableField&lt;BannerCallbacks&gt;" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tools_card_margin_horiz"
        android:layout_marginRight="@dimen/tools_card_margin_horiz">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/banner_open_description_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:firstBaselineToTopHeight="36dp"
            android:text="@string/tutorial_open_description"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UnusedAttribute" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/tools_dismiss_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/transparent"
            android:onClick="@{() -> callbacks.dismissBanner()}"
            android:padding="8dp"
            android:text="@string/dismiss_tutorial"
            android:textAllCaps="true"
            android:textColor="@color/gt_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/banner_open_description_text" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/banner_open_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/transparent"
            android:onClick="@{() -> callbacks.openTrainingTutorial()}"
            android:padding="8dp"
            android:text="@string/open_tutorial"
            android:textAllCaps="true"
            android:textColor="@color/gt_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tools_dismiss_text"
            app:layout_constraintTop_toBottomOf="@+id/banner_open_description_text" />

        <View
            android:id="@+id/tutorial_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
