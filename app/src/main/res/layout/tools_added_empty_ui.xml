<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout style="@style/Widget.GodTools.Static.Layout">

        <ImageView
            android:id="@+id/icon"
            style="@style/Widget.GodTools.Static.Icon.Large"
            app:srcCompat="@drawable/ic_find_tools" />

        <Button
            android:id="@+id/action"
            style="@style/Widget.GodTools.Static.Action"
            android:layout_width="144dp"
            android:layout_below="@id/icon"
            android:text="@string/nav_find_tools" />
    </RelativeLayout>
</RelativeLayout>
