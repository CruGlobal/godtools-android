<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/concatTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tools_card_margin_horiz"
        android:layout_marginEnd="@dimen/tools_card_margin_horiz"
        android:layout_marginTop="24dp"
        android:text="@string/dashboard_tools_section_spotlight_label"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/concatSubTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tools_card_margin_horiz"
        android:layout_marginEnd="@dimen/tools_card_margin_horiz"
        android:layout_marginBottom="10dp"
        android:text="@string/dashboard_tools_section_spotlight_sub_label"
        android:textSize="12sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="1"
        tools:listitem="@layout/dashboard_tools_spotlight_list_item" />
</LinearLayout>
