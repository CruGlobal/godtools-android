<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="androidx.lifecycle.LiveData" />

        <variable name="deviceLocale" type="LiveData&lt;java.util.Locale&gt;" />
        <variable name="selectedLanguage" type="LiveData&lt;org.cru.godtools.model.Language&gt;" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/anim_languages_parallel_dialog_switcher" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:breakStrategy="balanced"
                android:gravity="center_horizontal"
                android:text="@string/languages_parallel_dialog_headline"
                android:textAppearance="@style/TextAppearance.GodTools.Tutorial.Headline2" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp">

                <AutoCompleteTextView
                    android:id="@+id/parallelLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/languages_parallel_dialog_select"
                    android:inputType="none"
                    android:text="@{selectedLanguage.getDisplayName(context, deviceLocale)}" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
