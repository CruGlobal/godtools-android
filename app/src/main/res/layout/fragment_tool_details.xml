<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <org.ccci.gto.android.common.picasso.view.SimplePicassoImageView
                android:id="@+id/banner"
                android:adjustViewBounds="true"
                android:background="@color/gray_E6"
                android:scaleType="centerCrop"
                app:layout_aspectRatio="210%"
                app:layout_widthPercent="100%" />

            <ProgressBar
                android:id="@+id/download_progress"
                style="@style/Widget.GodTools.Tools.Download.ProgressBar"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_alignBottom="@id/banner"
                android:visibility="gone"
                tools:visibility="visible" />
        </androidx.percentlayout.widget.PercentRelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            style="@style/Widget.GodTools.Tools.Details.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tools_details_margin_horiz"
            android:layout_marginRight="@dimen/tools_details_margin_horiz"
            android:layout_marginTop="40dp"
            tools:text="Knowing God Personally" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/shares"
            style="@style/Widget.GodTools.Tools.Details.Shares"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tools_details_margin_horiz"
            android:layout_marginRight="@dimen/tools_details_margin_horiz"
            android:layout_marginTop="10dp"
            tools:text="45,876 Views" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/action_add"
            style="@style/Widget.GodTools.Button.Colored.Green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="@dimen/tools_details_margin_horiz"
            android:layout_marginRight="@dimen/tools_details_margin_horiz"
            android:layout_marginTop="16dp"
            android:text="@string/action_tools_download" />

        <androidx.appcompat.widget.AppCompatButtonImpl
            android:id="@+id/action_remove"
            style="@style/Widget.GodTools.Button.Colored.Red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="@dimen/tools_details_margin_horiz"
            android:layout_marginRight="@dimen/tools_details_margin_horiz"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/action_tools_remove"
            tools:visibility="gone" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Widget.GodTools.Tools.Details.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tools_details_margin_horiz"
            android:layout_marginRight="@dimen/tools_details_margin_horiz"
            android:text="@string/label_tools_about" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description"
            style="@style/Widget.GodTools.Tools.Details.Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="@dimen/tools_details_margin_horiz"
            android:layout_marginRight="@dimen/tools_details_margin_horiz"
            android:layout_marginTop="8dp"
            android:autoLink="web|email"
            tools:text="Chili can be enameled with bitter sausages, also try soaking the sauce with ice water.  To the diced avocado add ground beef, strudel, ricotta and tender chocolate.  Try toasting cucumber ricotta tossed with rice vinegar." />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/languages_header"
            style="@style/Widget.GodTools.Tools.Details.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tools_details_margin_horiz"
            android:layout_marginRight="@dimen/tools_details_margin_horiz"
            tools:text="40 Languages" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/languages"
            style="@style/Widget.GodTools.Tools.Details.Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="@dimen/tools_details_margin_horiz"
            android:layout_marginRight="@dimen/tools_details_margin_horiz"
            android:layout_marginTop="8dp"
            tools:text="English, French, Spanish" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
