<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    app:layout_childType="card"
    app:layout_dynamicHeight="true">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/horiz_margin_card"
        android:layout_marginRight="@dimen/horiz_margin_card"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/horiz_margin_card_content"
            android:layout_marginRight="@dimen/horiz_margin_card_content"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Card Label" />

            <View
                android:id="@+id/label_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/label"
                android:layout_marginTop="12dp"
                tools:background="#bebebe" />

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/label_divider"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </android.support.v4.widget.NestedScrollView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
