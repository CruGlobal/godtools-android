<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.github.captain_miao.optroundcardview.OptRoundCardView
        android:id="@+id/g_header_peek_outerlayout_optroundcardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-16dp"
        android:layout_marginRight="@dimen/header_right_margin"
        android:layout_marginTop="-16dp"
        android:tag="top"
        app:optRoundCardBackgroundColor="@android:color/white"
        app:optRoundCardCornerRadius="12dp"
        app:optRoundCardElevation="20dp"
        app:optRoundCardLeftBottomCorner="false"
        app:optRoundCardLeftTopCorner="false"
        app:optRoundCardRightBottomCorner="true"
        app:optRoundCardRightTopCorner="true"
        app:optRoundCardShowLeftEdgeShadow="false"
        app:optRoundContentPadding="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <org.keynote.godtools.renderer.crureader.bo.GPage.Views.AutoScaleTextView
                android:id="@+id/g_header_header_textview"
                style="@style/AutoScaleTextView.HeaderHeaderTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="2"
                android:text="@string/sample_text_g_header_peak_header_textview"
                android:textColor="@android:color/black"/>

            <org.keynote.godtools.renderer.crureader.bo.GPage.Views.AutoScaleTextView
                android:id="@+id/g_header_subheader_textview"
                style="@style/AutoScaleTextView.HeaderSubheadingTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="5"
                android:text="@string/sample_text_g_header_peak_subheader_textview"
                android:textColor="@android:color/black"
                />


        </LinearLayout>

    </com.github.captain_miao.optroundcardview.OptRoundCardView>


</merge>