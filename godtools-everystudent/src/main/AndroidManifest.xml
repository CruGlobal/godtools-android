<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.cru.godtools.everystudent">

    <application>
        <activity
            android:name=".EveryStudent"
            android:label="@string/app_name_everystudent"
            android:theme="@android:style/Theme.Light" />
        <activity
            android:name=".EveryStudentSearchResults"
            android:label="@string/app_name_everystudent"
            android:theme="@android:style/Theme.Light">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".EveryStudentView"
            android:label="@string/app_name_everystudent"
            android:theme="@android:style/Theme.Light" />

        <provider
            android:name=".EveryStudentProvider"
            android:authorities="@string/every_student_authority" />

        <meta-data
            android:name="android.app.default_searchable"
            android:value="org.cru.godtools.everystudent.EveryStudentSearchResults" />
    </application>
</manifest>
