<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.GodTools.Static.Layout" parent="Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">32dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Widget.GodTools.Static.Icon" parent="Base">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:tint">@color/gt_blue</item>
    </style>

    <style name="Widget.GodTools.Static.Label" parent="Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:breakStrategy" tools:targetApi="m">balanced</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">@style/TextAppearance.GodTools.Static.Label</item>
    </style>

    <style name="TextAppearance.GodTools.Static.Label" parent="TextAppearance.GodTools.Headline">
        <item name="android:textColor">@color/gt_blue</item>
    </style>
</resources>
