<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <ImageView
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:layout_alignParentRight="true"
        android:id="@+id/ivDownloadLanguage"
        android:tint="@color/gray_60"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:scaleType="centerInside"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_download_pressed"/>

    <TextView
        android:background="@drawable/settings_language_bg"
        android:id="@+id/tvLanguageName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="English"
        android:textSize="18sp"
        android:paddingLeft="12dp"
        android:gravity="center_vertical"
        android:textColor="@color/gray_60" />

    <TextView
        android:id="@+id/tvCurrentLanguageIndicator"
        android:visibility="gone"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="@string/settings_current_language"
        android:layout_height="match_parent"
        android:textColor="@color/settings_listitem_item"/>




</RelativeLayout>