<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    android:paddingBottom="10dp"
    android:weightSum="1">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/gt4_homescreen_draftpopover_iconsonly"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/publishDraft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp"
            android:src="@drawable/gt4_homescreen_publishdrafticon"/>

        <ImageView
            android:id="@+id/createDraft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp"
            android:src="@drawable/gt4_homescreen_createdrafticon"/>

    </LinearLayout>

</LinearLayout>
