<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  
  android:weightSum="1"
  android:paddingBottom="10dp">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:background="@drawable/gt4_homescreen_draftpopover_iconsonly"
        android:layout_marginRight="10dp">

        <ImageView
        android:id="@+id/publishDraft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:src="@drawable/gt4_homescreen_publishdrafticon"
        android:background="#00ffffff"
        android:clickable="true"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"/>

    <ImageView
        android:id="@+id/createDraft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:src="@drawable/gt4_homescreen_createdrafticon"
        android:background="#00ffffff"
        android:clickable="true"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"/>
        
        </LinearLayout>

</LinearLayout>
