<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/homescreen"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gt4_homescreen_background_ip4">

    <ImageView
        android:id="@+id/homescreen_icon"
        android:layout_width="120dp"
        android:layout_height="112.5dp"
        android:src="@drawable/gt4_home_bookicon"
        android:background="#00ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:contentDescription="homescreen_icon"/>

    <LinearLayout
        android:id="@+id/contLoading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:indeterminate="true"/>

        <TextView
            android:id="@+id/tvTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="16sp"/>

    </LinearLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/list_item_with_icon_and_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/homescreen_kgp"
        android:layout_above="@+id/homescreen_satisfied"
        android:layout_marginBottom="10dp"/>

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/list_item_with_icon_and_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/homescreen_satisfied"
        android:layout_above="@+id/homescreen_4sl"
        android:layout_marginBottom="10dp"/>

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/list_item_with_icon_and_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/homescreen_4sl"
        android:layout_above="@+id/homescreen_everystudent"
        android:layout_marginBottom="10dp"/>

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/list_item_with_icon_and_text"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:id="@+id/homescreen_everystudent"/>

</RelativeLayout>
