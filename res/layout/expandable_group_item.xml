<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00ffffff"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/group_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#95b9b9b9">

        <ImageView
            android:id="@+id/iv_trans_view"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|left|top"
            android:background="#00ffffff"
            android:gravity="center"
            android:src="@drawable/icon"/>

        <View
            android:id="@+id/icon_line"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_trans_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:ellipsize="none"
            android:gravity="center_vertical"
            android:singleLine="false"
            android:text="@string/filler_textview"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#303030"/>

        <ImageView
            android:id="@+id/sub_menu"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingRight="10dp"
            android:src="@drawable/gt4_homescreen_draftgripc"/>

    </LinearLayout>

</LinearLayout>
