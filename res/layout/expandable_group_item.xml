<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="#00ffffff"
  android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#95b9b9b9"
        android:layout_marginTop="15dp"
        android:id="@+id/group_main">
        
    <ImageView 
    	android:id="@+id/iv_trans_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="center"
     	android:src="@drawable/icon"
        android:background="#00ffffff"
        android:layout_gravity="bottom|left|top"/>
        
    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:id="@+id/icon_line"
        android:visibility="invisible"/>
     
    <TextView 
	    android:id="@+id/tv_trans_view"
    	android:text="TextView" 
    	android:layout_width="wrap_content"
     	android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#303030"
     	android:layout_height="wrap_content"
        android:gravity="center_vertical"
     	android:singleLine="false"
     	android:ellipsize="none"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="#00ffffff"
        android:layout_marginLeft="15dp"/>
    
    <ImageView
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:id="@+id/sub_menu"
        android:src="@drawable/gt4_homescreen_draftgripc"
        android:layout_gravity="center_vertical"
        android:paddingRight="10dp"/>
        
        </LinearLayout>

</LinearLayout>
