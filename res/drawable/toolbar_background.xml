<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270"
                      android:endColor="@color/highlight_bottom" android:startColor="@color/highlight_top">
            </gradient>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270"
                      android:endColor="@color/highlight_bottom" android:startColor="@color/highlight_top">
            </gradient>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="270"
                      android:endColor="@color/toolbar_bottom" android:startColor="@color/toolbar_top">
            </gradient>
        </shape>
    </item>
</selector>
