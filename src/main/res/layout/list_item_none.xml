<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout style="@style/Widget.GodTools.Static.Layout">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/icon"
            style="@style/Widget.GodTools.Static.Icon"
            tools:src="@drawable/ic_add" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/label"
            style="@style/Widget.GodTools.Static.Label"
            android:layout_below="@id/icon"
            tools:text="@string/title_add_new_tools" />

        <Button
            android:id="@+id/action"
            style="@style/Widget.GodTools2.Button.Colored.Blue"
            android:layout_width="260dp"
            android:layout_height="56dp"
            android:layout_below="@id/label"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            tools:text="@string/title_add_new_tools" />
    </RelativeLayout>
</RelativeLayout>
