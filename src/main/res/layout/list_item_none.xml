<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:clipToPadding="false"
        android:paddingBottom="32dp"
        android:paddingTop="32dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:tint="@color/gt_blue"
            tools:src="@drawable/ic_add" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.GodTools2.Headline"
            android:textColor="@color/gt_blue"
            tools:text="@string/title_add_new_tools" />

        <Button
            android:id="@+id/action"
            style="@style/Widget.GodTools2.Button.Colored.Blue"
            android:layout_width="260dp"
            android:layout_height="56dp"
            android:layout_below="@id/label"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            tools:text="@string/title_add_new_tools" />
    </RelativeLayout>
</RelativeLayout>
