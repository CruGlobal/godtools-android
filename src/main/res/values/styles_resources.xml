<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="resources_card_corner_radius">0dp</dimen>
    <dimen name="resources_card_elevation">2dp</dimen>
    <dimen name="resources_card_margin_horiz">14dp</dimen>
    <dimen name="resources_card_margin_vert">2dp</dimen>
    <dimen name="resources_details_margin_horiz">56dp</dimen>

    <style name="Widget.GodTools2.Resources.CardView" parent="Widget.GodTools2.CardView">
        <item name="android:layout_marginBottom">@dimen/resources_card_margin_vert</item>
        <item name="android:layout_marginLeft">@dimen/resources_card_margin_horiz</item>
        <item name="android:layout_marginRight">@dimen/resources_card_margin_horiz</item>
        <item name="android:layout_marginTop">@dimen/resources_card_margin_vert</item>
        <item name="cardElevation">@dimen/resources_card_elevation</item>
        <item name="cardMaxElevation">@dimen/resources_card_elevation</item>
        <item name="cardCornerRadius">@dimen/resources_card_corner_radius</item>
    </style>

    <style name="Widget.GodTools2.Resources.Download.ProgressBar" parent="Widget.GodTools2.ProgressBar">
        <item name="android:indeterminate">false</item>
    </style>

    <style name="Widget.GodTools2.Resources.Details.Title" parent="Base">
        <item name="android:textAppearance">@style/TextAppearance.GodTools2.Resources.Details.Title</item>
    </style>

    <style name="Widget.GodTools2.Resources.Details.Shares" parent="Base">
        <item name="android:textAppearance">@style/TextAppearance.GodTools2.Resources.Details.Shares</item>
    </style>

    <style name="Widget.GodTools2.Resources.Details.Subhead" parent="Base">
        <item name="android:textAppearance">@style/TextAppearance.GodTools2.Resources.Details.Subhead</item>
    </style>

    <style name="Widget.GodTools2.Resources.Details.Content" parent="Base">
        <item name="android:textAppearance">@style/TextAppearance.GodTools2.Resources.Details.Content</item>
    </style>

    <style name="TextAppearance.GodTools2.Resources.Details.Title" parent="TextAppearance.GodTools2.Headline">
        <item name="android:textColor">@color/gray_5A</item>
    </style>

    <style name="TextAppearance.GodTools2.Resources.Details.Shares" parent="TextAppearance.GodTools2">
        <item name="android:textColor">@color/gray_5A</item>
    </style>

    <style name="TextAppearance.GodTools2.Resources.Details.Subhead" parent="TextAppearance.GodTools2.Subhead">
        <item name="android:textColor">@color/gray_BE</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.GodTools2.Resources.Details.Content" parent="TextAppearance.GodTools2">
        <item name="android:textColor">@color/gray_5A</item>
    </style>
</resources>
