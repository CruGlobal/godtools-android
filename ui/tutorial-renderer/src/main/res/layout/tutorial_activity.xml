<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/tutorial_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:minHeight="?attr/actionBarSize"
        tools:menu="@menu/tutorial_onboarding_menu" />

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/on_boarding_indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/circle_indicator_height"
        android:layout_gravity="bottom"
        android:layout_marginBottom="8dp"
        app:ci_drawable="@drawable/img_tutorial_selected"
        app:ci_drawable_unselected="@drawable/img_tutorial_unselected" />
</FrameLayout>
