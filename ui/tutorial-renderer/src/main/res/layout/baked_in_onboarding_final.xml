<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="callback"
            type="org.cru.godtools.tutorial.util.OnBoardingCallbacks" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_baked_in_final_background">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextViewPrepare"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="16dp"
            android:drawableLeft="@drawable/img_baked_in_on_boarding_check"
            android:drawablePadding="5dp"
            android:gravity="center|start|center_horizontal|center_vertical"
            android:text="Prepare for any conversation"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toTopOf="@+id/appCompatTextViewWalkGospel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextViewWalkGospel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="16dp"
            android:drawableLeft="@drawable/img_baked_in_on_boarding_check"
            android:drawablePadding="5dp"
            android:gravity="center|start|center_horizontal|center_vertical"
            android:text="Walk someone through the gospel"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toTopOf="@+id/appCompatTextViewTwoLanguage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appCompatTextViewPrepare" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextViewTwoLanguage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="16dp"
            android:drawableLeft="@drawable/img_baked_in_on_boarding_check"
            android:drawablePadding="5dp"
            android:gravity="center|start|center_horizontal|center_vertical"
            android:text="Run two languages side by side"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toTopOf="@+id/appCompatTextView80Languages"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appCompatTextViewWalkGospel" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextView80Languages"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:drawableLeft="@drawable/img_baked_in_on_boarding_check"
            android:drawablePadding="5dp"
            android:gravity="center|start|center_horizontal|center_vertical"
            android:text="Choose from over 80 languages"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toTopOf="@+id/appCompatTextViewStartedChristian"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appCompatTextViewTwoLanguage" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextViewStartedChristian"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:drawableLeft="@drawable/img_baked_in_on_boarding_check"
            android:drawablePadding="5dp"
            android:gravity="center|start|center_horizontal|center_vertical"
            android:text="Help someone get started as a Christian"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toTopOf="@+id/onboarding_show_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView80Languages" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/onboarding_show_more"
            style="@style/Widget.GodTools.Button.Borderless.Colored.Blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="32dp"
            android:onClick="@{() -> callback.onOptInClicked()}"
            android:text="Show Me More"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/onboarding_get_started"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/onboarding_get_started"
            style="@style/Widget.GodTools.Button.Borderless.Colored.Blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="32dp"
            android:onClick="@{() -> callback.onNextClicked()}"
            android:text="Get Started"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/onboarding_show_more" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
