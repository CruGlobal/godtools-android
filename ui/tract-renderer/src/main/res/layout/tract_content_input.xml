<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="org.cru.godtools.xml.model.BaseModelKt" />
        <import type="org.cru.godtools.xml.model.Input.Type" />
        <import type="org.cru.godtools.xml.model.StylesKt" />
        <import type="org.cru.godtools.xml.model.TextKt" />

        <variable name="model" type="org.cru.godtools.xml.model.Input" />
    </data>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@{(model.label ?? model.placeholder).text}"
        android:saveEnabled="false"
        android:textColorHint="@{TextKt.getTextColor(model.label ?? model.placeholder)}"
        app:boxStrokeColor="@{StylesKt.getPrimaryColor(BaseModelKt.getStylesParent(model))}"
        app:hintTextColor="@{TextKt.getTextColor(model.placeholder ?? model.label)}"
        app:visibleIf="@{model != null &amp;&amp; model.type != Type.HIDDEN}">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@{StylesKt.getTextColor(BaseModelKt.getStylesParent(model))}"
            app:textCursorDrawableTint="@{StylesKt.getPrimaryColor(BaseModelKt.getStylesParent(model))}" />
    </com.google.android.material.textfield.TextInputLayout>
</layout>
