<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="org.cru.godtools.xml.model.BaseModelKt" />
        <import type="org.cru.godtools.xml.model.StylesKt" />

        <variable name="model" type="org.cru.godtools.xml.model.Tabs" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTabLayout
            android:id="@+id/tabs"
            style="@style/Widget.GodTools.Tract.Content.Tabs"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            app:backgroundTintCompat="@{StylesKt.getPrimaryColor(BaseModelKt.getStylesParent(model))}"
            app:clipToOutline="@{true}"
            app:tabSelectedTextColor="@{StylesKt.getPrimaryTextColor(BaseModelKt.getStylesParent(model))}"
            app:tabTextColor="@{StylesKt.getPrimaryColor(BaseModelKt.getStylesParent(model))}" />

        <include
            android:id="@+id/tab"
            layout="@layout/tract_content_tab" />
    </LinearLayout>
</layout>
