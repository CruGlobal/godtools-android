<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <color name="tract_tips_red">#E53660</color>
    <color name="tract_tips_orange">#E55536</color>

    <dimen name="tract_tip_margin_horiz">32dp</dimen>

    <dimen name="tract_tips_tip_elevation">4dp</dimen>
    <dimen name="tract_tips_tip_corner_radius">6dp</dimen>

    <bool name="tract_tips_show_full_height">true</bool>

    <!-- region Badge -->
    <dimen name="tract_tips_badge_size">40dp</dimen>
    <dimen name="tract_tips_badge_padding">8dp</dimen>
    <color name="tract_tips_badge_outline">@color/gray_E6</color>

    <style name="Widget.GodTools.Tip.Badge" parent="Base">
        <item name="android:layout_width">@dimen/tract_tips_badge_size</item>
        <item name="android:layout_height">@dimen/tract_tips_badge_size</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/tract_tips_tip_elevation</item>
        <item name="shapeAppearance">@style/ShapeAppearance.GodTools.Tip.Badge</item>

        <!-- KitKat compatibility -->
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/tract_tips_badge_outline</item>
    </style>

    <style name="ShapeAppearance.GodTools.Tip.Badge" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/tract_tips_tip_corner_radius</item>
    </style>
    <!-- endregion Badge -->

    <!-- region Arrow -->
    <dimen name="tract_tips_arrow_height">48dp</dimen>
    <dimen name="tract_tips_arrow_width">@dimen/tract_tips_badge_size</dimen>
    <dimen name="tract_tips_arrow_padding">@dimen/tract_tips_badge_padding</dimen>
    <dimen name="tract_tips_arrow_padding_arrow">16dp</dimen>
    <dimen name="tract_tips_arrow_size">12dp</dimen>

    <style name="Widget.GodTools.Tip.Arrow" parent="Base">
        <item name="backgroundFillColor">@color/white</item>
        <item name="elevation">@dimen/tract_tips_tip_elevation</item>
        <item name="shapeAppearance">@style/ShapeAppearance.GodTools.Tip.Arrow</item>
    </style>

    <style name="Widget.GodTools.Tip.Arrow.Vertical">
        <item name="android:layout_width">@dimen/tract_tips_arrow_width</item>
        <item name="android:layout_height">@dimen/tract_tips_arrow_height</item>
        <item name="android:paddingLeft">@dimen/tract_tips_arrow_padding</item>
        <item name="android:paddingRight">@dimen/tract_tips_arrow_padding</item>
    </style>

    <style name="Widget.GodTools.Tip.Arrow.Down" parent="Widget.GodTools.Tip.Arrow.Vertical">
        <item name="android:paddingTop">@dimen/tract_tips_arrow_padding</item>
        <item name="android:paddingBottom">@dimen/tract_tips_arrow_padding_arrow</item>
    </style>

    <style name="Widget.GodTools.Tip.Arrow.Up" parent="Widget.GodTools.Tip.Arrow.Vertical">
        <item name="android:paddingTop">@dimen/tract_tips_arrow_padding_arrow</item>
        <item name="android:paddingBottom">@dimen/tract_tips_arrow_padding</item>
    </style>

    <style name="ShapeAppearance.GodTools.Tip.Arrow" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/tract_tips_tip_corner_radius</item>
    </style>
    <!-- endregion Arrow -->
</resources>
