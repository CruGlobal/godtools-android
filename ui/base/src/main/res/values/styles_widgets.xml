<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Button Widgets -->
    <style name="Widget.GodTools.Button.Colored" parent="Widget.AppCompat.Button.Colored" />

    <style name="Widget.GodTools.Button.Colored.Blue">
        <item name="backgroundTint">@color/gt_blue</item>
    </style>

    <style name="Widget.GodTools.Button.Colored.Green">
        <item name="backgroundTint">@color/gt_green</item>
    </style>

    <style name="Widget.GodTools.Button.Colored.Red">
        <item name="backgroundTint">@color/gt_red</item>
    </style>

    <style name="Widget.GodTools.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor" tools:ignore="PrivateResource">@color/mtrl_text_btn_text_color_selector</item>
    </style>

    <!-- Colored Button -->
    <style name="Widget.GodTools.Button.Borderless.Colored" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">6dp</item>
    </style>
    <style name="Widget.GodTools.Button.Borderless.Colored.Blue" parent="Widget.GodTools.Button.Borderless.Colored">
        <item name="backgroundTint">@color/gt_blue</item>
    </style>
    <style name="Widget.GodTools.Button.Borderless.Colored.Green" parent="Widget.GodTools.Button.Borderless.Colored">
        <item name="backgroundTint">@color/gt_green</item>
    </style>

    <!-- Button color ThemeOverlays -->
    <style name="ThemeOverlay.GodTools.Button.Red" parent="ThemeOverlay.MaterialComponents">
        <item name="colorPrimary">@color/gt_red</item>
    </style>

    <!-- ProgressBar -->
    <style name="Widget.GodTools.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal" />

    <!-- TabLayout Widgets -->
    <dimen name="tabs_corner_radius">0dp</dimen>
    <style name="Widget.GodTools.TabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@drawable/bkg_tabs</item>
        <item name="tabBackground">@drawable/bkg_tab_label_tintable</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabTextAppearance">@style/TextAppearance.GodTools.TabLayout.Tab</item>
    </style>

    <style name="TextAppearance.GodTools.TabLayout.Tab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
</resources>
