<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <dimen name="static_content_margin_vert">20dp</dimen>
    <dimen name="static_content_icon_size_large">144dp</dimen>

    <style name="Widget.GodTools.Static.Icon" parent="Base">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_marginBottom">@dimen/static_content_margin_vert</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Widget.GodTools.Static.Icon.Tinted.Blue" parent="Widget.GodTools.Static.Icon">
        <item name="android:tint">@color/gt_blue</item>
    </style>

    <style name="Widget.GodTools.Static.Icon.Tinted.Green" parent="Widget.GodTools.Static.Icon">
        <item name="android:tint">@color/gt_green</item>
    </style>

    <style name="Widget.GodTools.Static.Text" parent="Base">
        <item name="android:breakStrategy" tools:targetApi="m">balanced</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">@style/TextAppearance.GodTools.Static.Text</item>
    </style>

    <style name="Widget.GodTools.Static.Label" parent="Widget.GodTools.Static.Text">
        <item name="android:textAppearance">@style/TextAppearance.GodTools.Static.Label</item>
    </style>

    <style name="Widget.GodTools.Static.ProgressBar" parent="Widget.GodTools.ProgressBar">
        <item name="android:progressDrawable">@drawable/progress_loading</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="TextAppearance.GodTools.Static.Text" parent="TextAppearance.GodTools.Medium">
        <item name="android:textColor">@color/gray_5A</item>
    </style>

    <style name="TextAppearance.GodTools.Static.Label" parent="TextAppearance.GodTools.Headline">
        <item name="android:textColor">@color/gt_blue</item>
    </style>
</resources>
