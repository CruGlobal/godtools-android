<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="article" type="org.cru.godtools.articles.aem.model.Article"/>
        <variable name="callback" type="org.cru.godtools.article.adapter.ArticleAdapter.Callback"/>
       <variable name="manifest" type="org.cru.godtools.xml.model.Manifest"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:onClick="@{() -> callback.onArticleSelected(article)}"
        android:padding="20dp">

        <TextView
            android:id="@+id/article_title_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@{article.mTitle}"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:textAppearance="@style/TextAppearance.GodTools.Large"
            android:textColor="@{manifest.getPrimaryColor()}"
            tools:textColor="@color/gt_blue"
            tools:text="Romances with wolves" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{article.getLastUpdatedFormattedString()}"
            android:textAppearance="@style/TextAppearance.GodTools.Subhead"
            android:textColor="@color/common_google_signin_btn_text_light_focused"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/article_title_text_view"
            tools:text="Updated: 12/12/20012" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>